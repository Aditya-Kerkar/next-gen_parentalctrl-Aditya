{
  "manifest_version": 2,
  "name": "Parental Control Extension",
  "version": "1.0",
  "description": "Tracks browsing history and blocks specified websites.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": "script-src 'self' http://localhost:5000; object-src 'self'",
  "icons": {
    "48": "icons/icon.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
